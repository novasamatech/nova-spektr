{
  "name": "omni-enterprise",
  "description": "Polkadot Enterprise application",
  "version": "0.0.1",
  "main": "./node_modules/.dev-temp-build/main.js",
  "devBuild": "./node_modules/.dev-temp-build",
  "license": "MIT",
  "author": {
    "name": "Novasama Technologies"
  },
  "scripts": {
    "start": "pnpm clean:dev && concurrently \"pnpm start:renderer\" \"pnpm start:main\" && watch",
    "start:electron": "electron .",
    "start:renderer": "cross-env BROWSER=none NODE_ENV=development pnpm webpack:serve",
    "start:main": "cross-env NODE_ENV=development pnpm r webpack:main start:electron",
    "watch": "nodemon --watch src/main --watch src/renderer/bridge --watch src/shared --ignore src/resources --ext \"*\" --exec",
    "webpack:serve": "webpack serve --config webpack/webpack.renderer.js",
    "webpack:main": "webpack --config webpack/webpack.main.js",
    "webpack:renderer": "webpack --config webpack/webpack.renderer.js",
    "test": "craco test",
    "test:coverage": "pnpm test --coverage --passWithNoTests --watchAll=false",
    "build": "cross-env NODE_ENV=production pnpm r clean:prod webpack:renderer webpack:main",
    "postbuild": "node src/scripts/postbuild.js",
    "dist": "./node_modules/.bin/electron-builder",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "clean:dev": "cross-var \"rimraf $npm_package_devBuild\"",
    "clean:prod": "rimraf dist",
    "r": "pnpm run-s"
  },
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=7.x"
  },
  "dependencies": {
    "@polkadot/api": "^8.11.2",
    "@polkadot/rpc-provider": "^8.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "tailwindcss": "^3.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@svgr/webpack": "^6.2.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.207",
    "@swc/jest": "^0.2.21",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "css-loader": "^6.7.1",
    "electron": "^19.0.7",
    "electron-builder": "^23.1.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-testing-library": "^5.5.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.7.1",
    "react-refresh": "^0.14.0",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "simple-progress-webpack-plugin": "^2.0.0",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix"
    ]
  },
  "eslintIgnore": [
    "dist"
  ]
}
